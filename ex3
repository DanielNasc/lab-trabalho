#!/bin/bash

# programa lista todos os arquivos e diretorios do diretorio atual
# colocando um (dir) na frente do nome de diretorios
# entrada: <path>
# saiad: <arquivo> <diretorio (dir)> <arquivo> <diretorio (dir)> ...

echo -n "diz o diret√≥rio: "
read dir

[ ! -d "$dir" ] && echo "dir n existe pow" && exit

for bagulho in $(ls $dir) # para cada arquivo ou diretorio do diretorio atual
do 
  echo "$bagulho $([ -d $bagulho ] && echo "(dir)")" # se for diretorio, coloca (dir) na frente do nome
done
